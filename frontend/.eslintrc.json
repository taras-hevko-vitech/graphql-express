{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": ["plugin:react/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "plugins": ["react"],
    "ignorePatterns": ["**/build/*"],
    "rules": {
        "react/prop-types": 0,
        "react/no-deprecated": 0,
        "react/no-direct-mutation-state": 0,
        "no-unused-vars": 0,
        "no-console": 0,
        "prefer-const": 0,
        "react/jsx-key": 0,
        "no-extra-semi": 0,
        "react/no-string-refs": 0,
        "react/jsx-no-comment-textnodes": 0,
        "react/jsx-no-target-blank": 0
    },
    "overrides": [
        {
            "files": ["**/*.test.js"],
            "env": {
                "jest": true
            }
        }
    ]
}
